{
  "git.autofetch": true,
  "terminal.integrated.tabs.enabled": true,
  "[html][css][javascript][typescript][javascriptreact][typescriptreact][json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "prettier.jsxSingleQuote": true,
  "prettier.quoteProps": "consistent",
  "prettier.singleQuote": true,
  "prettier.bracketSameLine": false,
  "prettier.printWidth": 80,
  "prettier.trailingComma": "all",
  "prettier.bracketSpacing": true,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.guides.bracketPairs": "active",
  "html.suggest.html5": true,
  "html.autoClosingTags": true,
  "html.validate.scripts": true,
  "html.validate.styles": true,
  "editor.tabSize": 2,
  "editor.lineHeight": 0,
  "editor.fontSize": 13,
  "git.mergeEditor": false,
  "files.eol": "\n",
  "editor.formatOnSave": true,
  "tailwindCSS.experimental.classRegex": [
    ["[Cc]lass(?:es)? ?\\=([^;]*);", "'([^']*)'"],
    ["[Cc]lass(?:es)? ?\\=([^;]*);", "\"([^\"]*)\""],
    ["[Cc]lass(?:es)? ?\\=([^;]*);", "\\`([^\\`]*)\\`"]
  ],
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.rootFontSize": 16, // Update this according to your project's base-fontsize Or remove if you didn't define custom base-fontsize - Default is 16
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  "prettier.ignorePath": ".gitignore",
  "jest.autoRun": {
    "watch": false // Start the jest with the watch flag
    // "onStartup": ["all-tests"] // Run all tests upon project launch
  },
  "jest.showCoverageOnLoad": true, // Show code coverage when the project is launched
  "jest.autoRevealOutput": "on-exec-error", // Don't automatically open test explorer terminal on launch
  "cSpell.language": "en,en-US,en-GB",
  "cSpell.enableFiletypes": ["dockerfile", "firerules", "ini", "sql"],
  "cSpell.customDictionaries": {
    "custom-dictionary-user": {
      "name": "custom-dictionary-user",
      "path": "~/.cspell/custom-dictionary-user.txt",
      "addWords": true,
      "scope": "user"
    }
  },
  "cSpell.words": [
    "commitlint",
    "endregion",
    "getedpills",
    "jsonparse",
    "Kolachi",
    "Nextjs",
    "roboto",
    "svgs"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true
}
